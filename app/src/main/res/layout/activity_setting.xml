<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/my_toolbar_layout"/>

    <View
        android:id="@+id/v_clear_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"/>

    <LinearLayout
    android:id="@+id/ll_clear_imagecache"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/v_clear_line1"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_imagecache"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_weight="10"
        />
    <TextView
        android:id="@+id/tv_imagecachesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cachesize"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_3"
        android:layout_below="@+id/ll_clear_imagecache"/>

</RelativeLayout>
